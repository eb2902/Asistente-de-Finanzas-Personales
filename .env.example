# Database Configuration
POSTGRES_DB=asistente_finanzas_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432
POSTGRES_DATA_PATH=./data/postgres

# Backend Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
BACKEND_PORT=3001

# Rate Limiting Configuration (Optional)
# SKIP_RATE_LIMIT=true  # Deshabilitar rate limiting en desarrollo

# Frontend Configuration
FRONTEND_PORT=3000

# pgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=your_secure_pgadmin_password

# Security Note:
# - Always change the default passwords in production
# - Use strong, unique passwords for each service
# - Consider using a password manager to generate secure passwords
# - Never commit .env files to version control